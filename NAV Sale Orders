select Line.[Document Type],
        Line.[Document No_],
        Line.[Sell-to Customer No_],
        Line.[Type],
        Line.[No_] AS 'Item',
        Line.[Location Code],
        Header.[Shipment Date] AS 'Header Ship Date',
        Line.[Shipment Date] AS 'Line Ship Date',
        Line.[Description],
        Line.[Unit of Measure],
        Line.[Quantity] AS 'Active Orders',
        Line.[Outstanding Quantity],
        Line.[Unit Price],
        Line.[Line Discount _],
        Line.[Line Discount Amount],
        Line.[Amount],
        Line.[Gross Weight],
        Line.[Net Weight],
        Line.[Unit Cost],
        Line.[Dimension Set ID],
        Line.[Bin Code],
        Line.[Unit of Measure Code],
        Line.[Item Category Code],
        Line.[Comm_ Bus_ Group],
        Line.[Comm_ Prod_ Group], 
    Header.[No_] AS 'Order',
    Header.[External Document No_],
    Header.[Bill-to Customer No_],
    Header.[Bill-to Name],
    Header.[Bill-to Name 2],
    Header.[Ship-to Address],
    Header.[Ship-to Address 2],
    Header.[Ship-to City],
    Header.[Order Date],
    Header.[Posting Date],
    Header.[Shipment Method Code],
    Header.[Ship] AS 'Shipped?',
    Header.[Transport Method],
    Header.[Ship-to Post Code],
    Header.[Ship-to County],
    Header.[Ship-to Country_Region Code],
    Header.[Document Date],
    CASE WHEN Header.[Status] = 1 THEN 'Released'
        WHEN Header.[Status] = 0 THEN 'Open' 
        WHEN Header.[Status] = 2 THEN 'Pending' 
            ELSE NULL END AS Status
    from [dbo].[Database$Sales Line] Line
    LEFT JOIN [dbo].[Database$Sales Header] Header 
    ON Header.[No_] = Line.[Document No_]
where Line.[Location Code] LIKE '%Plant Location%'
